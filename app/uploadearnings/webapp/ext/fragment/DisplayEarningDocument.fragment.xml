<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:macros="sap.fe.macros"
>
    <VBox>
        <FlexBox
            alignContent="End"
            justifyContent="End"
        >
            <Link
                text="View Earning Document"
                target="_blank"
                href="{url}"
                class="sapUiSmallMargin"
            />
        </FlexBox>
        <PDFViewer
            id="idDisplayEarningDocument"
            source="{configs>/additionalUrl}{url}"
            title="{fileName}"
            height="50rem"
            isTrustedSource="true"
        />
    </VBox>
</core:FragmentDefinition>
